<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--Ini untuk Gambar-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/photo" />

<!--Ini untuk Nama-->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins"
            android:text="@string/username"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="28sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_below="@+id/circleImageView" />

<!--Ini awal form-->
        <TextView
            android:id="@+id/tvData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/fillData"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:fontFamily="@font/poppins"
            android:layout_below="@+id/tvName" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtJudul"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Judul Vidio Anda"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:layout_below="@+id/tvData" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Jumlah View Vidio Anda"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:inputType="number"
            android:layout_below="@+id/edtJudul" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtInterest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Masukan Konten Kesukaanmu"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:layout_below="@+id/edtView" />
<!--Ini akhir form-->

<!--Ini untuk button rekomendasi-->
        <Button
            android:id="@+id/btn_recommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="@string/recommendation"
            android:layout_below="@+id/edtInterest"/>

    </RelativeLayout>
</ScrollView>